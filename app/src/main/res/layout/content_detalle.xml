<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".detalles"
    tools:showIn="@layout/activity_detalles">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textSize="24dp"
            android:text="Nombre maya"
            android:textColor="@color/boton" />

        <TextView
            android:textSize="18dp"
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="chak moâ€™ol"
            android:textColorHint="@color/negro"/>

        <TextView
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Nombre cientifico"
            android:textColor="@color/boton" />

        <TextView
            android:textSize="18dp"
            android:id="@+id/tv_specialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Leopardus pardalis"
            android:textColorHint="@color/negro" />

        <TextView
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Descripcion"
            android:textColor="@color/boton" />

        <TextView
            android:id="@+id/tv_specialty2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:text="Abogado penalista" />

        <TextView
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Region"
            android:textColor="@color/boton" />

        <TextView
            android:id="@+id/tv_specialty3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:text="Abogado penalista" />


    </LinearLayout>
</androidx.core.widget.NestedScrollView>